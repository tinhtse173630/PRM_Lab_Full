<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:id="@+id/Tview1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="133dp"
        android:layout_marginTop="68dp"
        android:text="Sign In Form"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/Etext1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="53dp"
        android:hint="Username"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/Tview1"
        app:layout_constraintStart_toStartOf="@+id/Tview1"
        app:layout_constraintTop_toBottomOf="@+id/Tview1" />

    <EditText
        android:id="@+id/Etext2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:hint="Password"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/Etext1"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/Etext1"
        app:layout_constraintTop_toBottomOf="@+id/Etext1" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="57dp"
        android:layout_marginBottom="127dp"
        android:text="SIGN IN"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/Tview2"
        app:layout_constraintHorizontal_bias="0.404"
        app:layout_constraintStart_toStartOf="@+id/Tview2"
        app:layout_constraintTop_toBottomOf="@+id/Tview2" />

    <TextView
        android:id="@+id/Tview2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="------Or-----"
        app:layout_constraintEnd_toEndOf="@+id/Tviewcreate"
        app:layout_constraintStart_toStartOf="@+id/Tviewcreate"
        app:layout_constraintTop_toBottomOf="@+id/Tviewcreate" />

    <TextView
        android:id="@+id/Tviewcreate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="71dp"
        android:padding="16dp"
        android:text="Not Account Yet ? Create one"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/Etext2"
        app:layout_constraintHorizontal_bias="0.45"
        app:layout_constraintStart_toStartOf="@+id/Etext2"
        app:layout_constraintTop_toBottomOf="@+id/Etext2" />


</androidx.constraintlayout.widget.ConstraintLayout>
